---
import { Icon } from "astro-icon/components";
---

<nav>
	<div class="nav-item"><Icon name="bxl:github" /></div>
	<div class="nav-item"><Icon name="bxl:linkedin-square" /></div>
	<div class="nav-item"><Icon name="bxl:twitter" /></div>
</nav>
<style lang="scss">
	nav {
		display: flex;
		flex-flow: row wrap;
		gap: 5rem;
		align-content: center;
		justify-content: center;
	}
	[data-icon] {
		font-size: var(--social-fs);
		color: var(--color-text-light);
	}
	@media screen and (max-width: 768px){
		nav {
			display: none;
			width: 100%;
			flex-flow: row;
			justify-content: space-evenly;
			gap: 1rem;
			position: absolute;
			top: 85%;

		}
		.nav-item {
			text-align: right;
		}
	}
</style>
